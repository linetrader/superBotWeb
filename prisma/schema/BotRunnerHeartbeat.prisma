model BotRunnerHeartbeat {
  botId     String
  workerId  String
  runId     String        // 러너 인스턴스 UUID
  hostname  String?
  pid       Int?
  tickAt    DateTime      @updatedAt
  createdAt DateTime      @default(now())

  // 추가
  startedAt DateTime      @default(now())
  endedAt   DateTime?     // 종료(또는 선점 상실) 시각
  leaseVer  Int           @default(1)  // 펜싱 토큰(버전)

  @@id([botId, workerId, runId])
  @@index([botId, tickAt])
  @@index([tickAt])
}
